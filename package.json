{
  "name": "angular2-example",
  "version": "0.1.0",
  "scripts": {
    "start": "npm run jit",
    "node-server": "node srv/main.js",
    "http-server": "http-server -o -c-1 -p 3000",
    "sync-server": "browser-sync start --proxy \"127.0.0.1:3000\" --files \"jit/\"",
    "jit": "gulp copy-jit && concurrently \"tsc -w\" \"npm run node-server\" \"npm run sync-server\" \"npm run watch-assets\" ",
    "aot": "ngc -p tsconfig-aot.json && rollup -c rollup-config.js && gulp copy-aot && gulp clean-aot && concurrently \"npm run node-server\" \"gulp open-browser\" ",
    "gzip": "gulp copy-gzip && ngc -p tsconfig-aot.json && rollup -c rollup-config.js && gulp clean-aot && npm run http-server",
    "watch-assets": "gulp copy-assets && onchange 'src/**/*.css' 'src/**/*.html' -e 'jit/*' -v -- gulp copy-assets",
    "clean": "gulp clean"
  },
  "dependencies": {
    "@angular/common": "~2.4.1",
    "@angular/compiler": "~2.4.1",
    "@angular/compiler-cli": "~2.4.1",
    "@angular/core": "~2.4.1",
    "@angular/forms": "~2.4.1",
    "@angular/http": "~2.4.1",
    "@angular/platform-browser": "~2.4.1",
    "@angular/platform-browser-dynamic": "~2.4.1",
    "@angular/platform-server": "^2.1.0",
    "@angular/router": "~3.4.1",
    "@angular/upgrade": "~2.4.1",
    "angular-in-memory-web-api": "~0.2.3",
    "core-js": "^2.4.1",
    "express": "^4.14.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.3",
    "systemjs": "0.20.3",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.5.35",
    "@types/node": "^7.0.4",
    "@types/selenium-webdriver": "^2.53.32",
    "browser-sync": "^2.17.6",
    "concurrently": "^3.0.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-copy": "1.0.0",
    "gulp-gzip": "^1.4.0",
    "gulp-load-plugins": "^1.3.0",
    "gulp-open": "^2.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-task-listing": "^1.0.1",
    "gulp-util": "^3.0.7",
    "http-server": "^0.9.0",
    "onchange": "^3.0.2",
    "rollup": "^0.41.4",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "typescript": "^2.0.3"
  }
}
